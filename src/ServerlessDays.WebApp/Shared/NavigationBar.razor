<nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
    <div class="container-fluid">
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
            <ul class="navbar-nav me-auto mb-2 mb-md-0 justify-content-md-center" style="margin: auto;">
                @if (this.NavigationItems != null)
                {
                    @foreach (var item in this.NavigationItems)
                    {
                        <li class="nav-item">
                            <a class="nav-link text-light" href="@item.Url" @attributes="RenderTarget(item)">
                                @(string.IsNullOrWhiteSpace(item.Icon) ? "" : $"<img src=\"{item.Icon}\" />")
                                @item.Title
                            </a>
                        </li>
                    }
                }
            </ul>
        </div>
    </div>
</nav>